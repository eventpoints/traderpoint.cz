{% block switch_widget %}
{% endblock %}


{% block switch_row %}
    <div style="background-color: var(--bs-body-bg);" class="ps-0 p-3 m-0 border rounded-3 form-switch form-switch-lg row justify-content-between align-items-center w-100">
        <label class="text-muted small" for="switchCheckChecked" {{ block('widget_attributes') }}
               value="{{ value is defined ? value : 1 }}">{{ form.vars.label|title }}</label>
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckChecked"
               {% if checked %}checked="checked"{% endif %}>
    </div>
{% endblock %}