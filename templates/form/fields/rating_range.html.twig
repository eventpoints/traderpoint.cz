{# templates/form_theme.html.twig #}

{% block rating_range_row %}
    <div class="mb-3" {{ stimulus_controller('rating') }}>
        <label for="{{ form.vars.id }}" class="form-label d-flex justify-content-between align-items-center">
            <span>{{ form.vars.label }}</span>
            <span class="badge text-bg-secondary" {{ stimulus_target('rating','current') }} ></span>
        </label>
        <div class="d-flex justify-content-between align-items-center g-3">
            <i class="bi bi-hand-thumbs-down text-danger fs-4"></i>
            <div class="w-75">
                <input type="range"
                        {{ stimulus_target('rating','input') }}
                        {{ stimulus_action('rating','updateValue', 'change') }}
                       class="form-range"
                       id="{{ form.vars.id }}"
                       name="{{ form.vars.full_name }}"
                       value="{{ form.vars.value }}"
                       min="{{ form.vars.attr.min }}"
                       max="{{ form.vars.attr.max }}"
                       step="{{ form.vars.attr.step }}"/>
            </div>
            <i class="bi bi-hand-thumbs-up text-success fs-4"></i>
        </div>
    </div>
{% endblock %}
