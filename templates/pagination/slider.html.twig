{% if pageCount > 1 %}
    <nav class="text-center my-3">
        {% set classAlign = (align is not defined) ? '' : align == 'center' ? ' justify-content-center' : (align == 'right' ? ' justify-content-end' : '') %}
        {% set classSize = (size is not defined) ? '' : size == 'large' ? ' list-group-lg' : (size == 'small' ? ' list-group-sm' : '') %}
        <div class="list-group d-inline-flex mx-auto list-group-horizontal">

            {# Previous button #}
            {% if previous is defined %}
                <a class="list-group-item list-group-item-action" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                    <i class="bi bi-chevron-left"></i>
                </a>
            {% else %}
                <a class="list-group-item list-group-item-action disabled">
                    <i class="bi bi-chevron-left"></i>
                </a>
            {% endif %}

            {# Always show the first page #}
            <a class="list-group-item list-group-item-action" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>

            {# Show current page if it's not the first or last page #}
            {% if current > 1 and current < pageCount %}
                <a class="list-group-item list-group-item-action disabled">&hellip;</a>
                <a class="list-group-item list-group-item-action active">{{ current }}</a>
            {% endif %}

            {# Show last page #}
            {% if current < pageCount - 1 %}
                <a class="list-group-item list-group-item-action disabled">&hellip;</a>
            {% endif %}
            <a class="list-group-item list-group-item-action" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>

            {# Next button #}
            {% if next is defined %}
                <a class="list-group-item list-group-item-action" rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                    <i class="bi bi-chevron-right"></i>
                </a>
            {% else %}
                <a class="list-group-item list-group-item-action disabled">
                    <i class="bi bi-chevron-right"></i>
                </a>
            {% endif %}

        </div>
    </nav>
{% endif %}
