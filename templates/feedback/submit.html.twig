{% extends 'simple.base.html.twig' %}

{% block title %}{{ 'feedback.title'|trans }}{% endblock %}

{% block body %}
    <div class="row justify-content-center vh-100 g-0">
        <div class="col-12 col-md-4 text-bg-primary d-flex flex-column">
            <div class="flex-grow-1 d-flex justify-content-center align-items-center">
                <div class="text-white fs-4">{{ 'feedback.title'|trans|title }}</div>
            </div>
        </div>
        <div class="col-12 col-md-8 d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8">

                        <div class="vstack gap-3">
                            <div>{{ 'feedback.description'|trans }}</div>
                            {{ form_start(feedbackForm) }}
                            {{ form_row(feedbackForm.category) }}
                            {{ form_row(feedbackForm.content) }}
                            {{ form_row(feedbackForm.page) }}
                            <div class="text-end">
                                <button type="submit"
                                        class="btn btn-primary btn-lg w-100">{{ 'continue'|trans }}</button>
                            </div>
                            {{ form_end(feedbackForm) }}
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
