<div class="d-flex justify-content-between align-items-center mt-5 mb-3">
    <div class="fw-bold fs-4">
        {{ 'job-clarifications'|trans|default('Job clarifications') }}
    </div>
    <div class="badge bg-light text-muted rounded-pill fs-5">
        {{ engagement.conversation ? engagement.conversation.messages|length : 0 }} {{ 'messages'|trans|default('messages') }}
    </div>
</div>

<div class="vstack gap-3">
    {% for message in engagement.conversation.messages %}
        <div class="card">
            <div class="card-header hstack gap-3 text-end">
                <div>
                    <img width="50" height="50" class="border object-fit-cover rounded-circle"
                         src="{{ message.participant.owner.avatar }}"/>
                </div>
                <div class="vstack">
                    <div>{{ message.participant.owner.fullName }}</div>
                    <div class="small text-muted">{{ message.createdAt.diffForHumans }}</div>
                </div>
            </div>
            <div class="card-body">{{ message.content|nl2br }}</div>
        </div>
    {% else %}
        <div class="list-group-item text-center text-muted">{{ 'no-messages-found'|trans }}</div>
    {% endfor %}
</div>

<div class="card mt-3">
    <div class="card-body">
        {{ form_start(messageForm) }}
        <div class="position-relative">
            {{ form_row(messageForm.content) }}
            <button class="position-absolute bottom-0 end-0 me-2 mb-2 btn btn-primary rounded-pill btn-lg fs-4" type="submit">
                <i class="bi bi-send-fill"></i>
            </button>
        </div>
        {{ form_end(messageForm) }}
    </div>
</div>