{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {# Leaflet CSS is imported by JS, but this helps if you prefer CSS via link #}
{% endblock %}

{% block body %}
    <div class="container min-vh-100">
        <div class="row justify-content-center g-3 my-3">
            <div class="col-12 col-md-6">
                <div class="card mb-5">
                    {{ form_start(engagementForm,   attr: {
                        'data-turbo': 'false'
                    }) }}
                    <div class="card-header">
                        <div class="fs-4 fw-bold">{{ 'advertise-job'|trans }}</div>
                        <div>{{ 'advertise-job-sub-heading'|trans }}</div>
                        <hr/>
                    </div>
                    {{ form_row(engagementForm.location) }}
                    <div class="card-body vstack gap-3">
                        {{ form_row(engagementForm.title) }}
                        {{ form_row(engagementForm.description) }}
                        {{ form_row(engagementForm.images) }}
                        {% if engagementForm.firstName is defined and engagementForm.lastName is defined %}
                            <div class="input-group">
                                {{ form_row(engagementForm.firstName) }}
                                {{ form_row(engagementForm.lastName) }}
                            </div>
                        {% endif %}
                        {% if engagementForm.email is defined %}
                            {{ form_row(engagementForm.email) }}
                        {% endif %}
                        {{ form_row(engagementForm.skills) }}
                        {{ form_row(engagementForm.timelinePreferenceEnum) }}
                        {{ form_row(engagementForm.budget) }}

                        <div class="d-grid">
                            <button data-turbo="false" class="btn btn-lg btn-primary">{{ 'submit'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(engagementForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
