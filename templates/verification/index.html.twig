{% extends 'base.html.twig' %}

{% block body %}
    <div class="container min-vh-100">
        <div class="row justify-content-center g-3 my-3">
            <div class="col-12 col-md-4">

                <div class="card my-3">
                    <div class="card-header">
                        <div class="fs-4 fw-bold">{{ 'verification-code'|trans({})|trans|title }}</div>
                        <div class="text-muted small">
                            {{ 'enter-the-6-digit-code-we-sent'|trans({}) }}
                        </div>
                    </div>
                    <div class="card-body">
                        {{ form_start(codeForm) }}
                        {{ form_row(codeForm.code) }}
                        {# hidden fields from VerificationCodeType #}
                        {{ form_widget(codeForm.type) }}
                        {{ form_widget(codeForm.destination) }}
                        {{ form_widget(codeForm.purpose) }}

                        <div class="mt-3 d-grid">
                            <button class="btn btn-success">
                                {{ 'verify'|trans({}) }}
                            </button>
                        </div>
                        {{ form_end(codeForm) }}
                    </div>
                    {# Optional: small helper footer
          <div class="card-footer text-muted small">
            {{ 'didnt-receive-code'|trans({}, 'messages') }} {{ 'check-spelling-or-resend'|trans({}, 'messages') }}
          </div>
                    #}
                </div>


            </div>
        </div>
    </div>
    </div>
{% endblock %}
