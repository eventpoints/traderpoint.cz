{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}


{% block body %}
    <div class="container">
        <div class="row justify-content-center g-3">
            <div class="col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        {% for participant in conversation.participants %}
                            <a href="#"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-center">
                                    <img class="object-fit-cover border" height="50" width="50"
                                         src="{{ participant.owner.avatar }}"/>
                                    <div>{{ participant.owner.fullName|title }}</div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="list-group list-group-flush messages">
                        {% for message in conversation.messages %}
                            <div class="list-group-item sticky-top">
                                <div class="hstack gap-3 text-end">
                                    <div>
                                        <img width="50" height="50" class="border object-fit-cover"
                                             src="{{ message.participant.owner.avatar }}"/>
                                    </div>
                                    <div class="vstack">
                                        <div>{{ message.participant.owner.fullName }}</div>
                                        <div class="small text-muted">{{ message.createdAt.diffForHumans }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="list-group-item">
                                <div>{{ message.content|nl2br }}</div>
                            </div>
                        {% else %}
                            <div class="list-group-item text-center text-muted">{{ 'no-messages-found'|trans }}</div>
                        {% endfor %}
                    </div>
                </div>
                <div class="card">
                    {{ form_start(messageForm) }}
                    {{ form_row(messageForm.content) }}
                    <div class="card-footer">
                        <div class="text-end">
                            <button type="submit" class="btn btn-outline-primary">{{ 'send'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(messageForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
