{% extends 'simple.base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
    <div class="row justify-content-center vh-100 g-0">
        <div class="col-12 col-md-4 text-bg-primary d-flex flex-column">
            <div class="flex-grow-1 d-flex justify-content-center align-items-center">
                <div class="text-white fs-4">{{ 'enter-new-password'|trans|title }}</div>
            </div>
        </div>
        <div class="col-12 col-md-8 d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8">
                        {{ form_start(passwordForm) }}
                        <div class="vstack gap-3">
                            {{ form_errors(passwordForm) }}
                            {{ form_row(passwordForm.plainPassword) }}
                            <button type="submit" class="btn btn-primary w-100 btn-lg">{{ 'continue'|trans }}</button>
                        </div>
                        {{ form_end(passwordForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
