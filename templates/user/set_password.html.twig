{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
    <div class="container">
        <div class="row justify-content-center my-5">
            <div class="col-md-4">
                {{ form_errors(passwordForm) }}
                {{ form_start(passwordForm) }}
                <div class="card">
                    <div class="card-header">
                        <div class="fs-4 fw-bold">{{ 'set-password'|trans|title }}</div>
                    </div>
                    <div class="card-body vstack gap-3 text-center">
                        {{ form_row(passwordForm.plainPassword) }}
                    </div>
                    <div class="card-footer d-flex justify-content-end align-items-center gap-4 border-top">
                        <button type="submit" class="btn btn-primary btn-lg">{{ 'continue'|trans }}</button>
                    </div>
                </div>
                {{ form_end(passwordForm) }}
            </div>
        </div>
    </div>
{% endblock %}
