{% extends 'base.html.twig' %}

{% block title %}Trader Point â€“ Get more jobs, less hassle{% endblock %}

{% block body %}

    <div class="text-center short-underline-heading py-3">
        <div class="fs-2 fw-bold">
            {{ 'app-tag-line'|trans }}
        </div>
        <div class="lead">{{ 'app-sub-tag-line'|trans }}</div>
    </div>

    <div class="container-fluid">
        <div class="row g-3">
            {% for skill in skills %}
                <div class="col-6 col-md-3 card-img-zoom">
                    <div class="card rounded-3 trade-category-card h-100">
                        <img class="img-fluid w-100 h-100 object-fit-cover card-img card-overlay-image"
                             src="{{ asset(skill.imagePath) }}"
                             alt="Find quality trade jobs near you">
                        <div class="card-img-overlay d-flex flex-column justify-content-end align-items-center text-center px-5">
                            <div class="fs-4 lh-1 fw-bold trade-category text-uppercase mb-5">{{ 'i-need-a'|trans({article: 'a', skill: skill.title|trans(domain='skills')})|title }}</div>
                        </div>
                        <a href="{{ path('create_engagement', {skill: skill.id}) }}"
                           class="stretched-link"></a>
                    </div>
                </div>
            {% endfor %}
            <div class="col-6 col-md-3 card-img-zoom">
                <div class="card trade-category-card h-100">
                    <img class="img-fluid w-100 h-100 object-fit-cover card-img card-overlay-image"
                         src="{{ asset('images/landing/something-else.png') }}"
                         alt="Find quality trade jobs near you">
                    <div class="card-img-overlay d-flex flex-column justify-content-end align-items-center text-center px-5">
                        <div class="fs-5 lh-1 fw-bold trade-category text-uppercase mb-5">{{ 'i-need-something-else'|trans|title }}</div>
                    </div>
                    <a href="{{ path('create_engagement') }}"
                       class="stretched-link"></a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row g-3 justify-content-center my-5">
            <div class="col-12 col-md-10">
                <div class="row g-3 justify-content-between">
                    <div class="text-center fs-2 short-underline-heading fw-bold">{{ 'how-our-service-works'|trans|title }}</div>
                    <div class="col-12 col-md-4">
                        <div class="card h-100 border-0 rounded-0 mb-3">
                            <div class="card-body">
                                <div class="display-3 text-primary">1.</div>
                                <div class="text-center">
                                    <div class="fs-4 mb-2">{{ 'advertise-job'|trans|capitalize }}</div>
                                    <p class="card-text">{{ 'advertise-job-explainer'|trans }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="card h-100 border-0 rounded-0 mb-3">
                            <div class="card-body">
                                <div class="display-3 text-primary">2.</div>
                                <div class="text-center">
                                    <div class="fs-4 mb-2">{{ 'receive-quotes'|trans|capitalize }}</div>
                                    <p class="card-text">{{ 'receive-quotes-explainer'|trans }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="card h-100 border-0 rounded-0 mb-3">
                            <div class="card-body">
                                <div class="display-3 text-primary">3.</div>
                                <div class="text-center">
                                    <div class="fs-4 mb-2">{{ 'job-gets-done'|trans|capitalize }}</div>
                                    <p class="card-text">{{ 'job-gets-done-explainer'|trans }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row justify-content-center my-5">
            <div class="col-12 col-md-10">
                <div class="row justify-content-between g-3 mt-5">
                    <div class="text-center short-underline-heading">
                        <div class="fs-2 fw-bold">{{ 'faq.title'|trans(domain='faqs')|title }}</div>
                        <div>{{ 'faq.intro'|trans|trans(domain='faqs') }}</div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="vstack gap-3">
                            <img class="img-fluid rounded-3 w-100 object-fit-cover" style="height: 300px" src="{{ asset('images/consumer-box.jpg') }}" alt="Find quality trade jobs near you">
                            <img class="img-fluid rounded-3 w-100 object-fit-cover" style="height: 300px" src="{{ asset('images/skill-builder.jpg') }}" alt="Find quality trade jobs near you">
                        </div>
                    </div>
                    <div class="col-12 col-md-8">
                        <div class="accordion" id="faqAccordion">
                            {% for item in faqs %}
                                {% trans_default_domain 'faqs' %}
                                {% set params = item.parameters %}
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="faq-heading-{{ loop.index }}">
                                        <button class="accordion-button collapsed"
                                                type="button"
                                                data-bs-toggle="collapse"
                                                data-bs-target="#faq-collapse-{{ loop.index }}"
                                                aria-expanded="false"
                                                aria-controls="faq-collapse-{{ loop.index }}">
                                            {{ item.questionKey|trans }}
                                        </button>
                                    </h2>
                                    <div id="faq-collapse-{{ loop.index }}"
                                         class="accordion-collapse collapse"
                                         aria-labelledby="faq-heading-{{ loop.index }}"
                                         data-bs-parent="#faqAccordion">
                                        <div class="accordion-body">
                                            {{ item.answerKey|trans(params)|raw }}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
