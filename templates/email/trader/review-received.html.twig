{% extends 'email/base.html.twig' %}
{% trans_default_domain 'email' %}

{% block subject %}
    {{ 'review-received'|trans }}
{% endblock %}

{% block content %}
    <div>{{ 'review-received'|trans }}</div>
    <p>{{ 'review-received-content'|trans }}</p>
    <table role="presentation" width="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td align="center" style="padding:16px 0;background-color: #ecedee;color:#333333;">
                {{ 'review-received-link'|trans }}
            </td>
        </tr>
    </table>
{% endblock %}