{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center g-3 mt-3 mb-5">

            <div class="col-12 col-md-6">

                {{ engagement.title }}

                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-start">
                        <div class="fs-4 fw-bold">{{ 'leave-review-for'|trans({title: user.traderProfile.title})|capitalize }}</div>
                        <div class="fs-4 badge text-bg-primary text-white rounded-pill lh-1">{{ 'public'|trans }}</div>
                    </div>
                    {{ form_start(reviewForm) }}
                    <div class="card-body vstack gap-3">
                        {{ form_row(reviewForm.title) }}
                        {{ form_row(reviewForm.responseRating) }}
                        {{ form_row(reviewForm.customerServicesRating) }}
                        {{ form_row(reviewForm.workQualityRating) }}
                        {{ form_row(reviewForm.valueForMoneyRating) }}
                        {{ form_row(reviewForm.content) }}
                        <div class="text-end">
                            <button type="submit" class="btn btn-lg btn-primary">{{ 'submit'|trans }}</button>
                        </div>
                    </div>
                    {{ form_end(reviewForm) }}
                </div>

            </div>
        </div>

    </div>
{% endblock %}
