<div {{ stimulus_controller('toast') }}
        aria-live="polite"
        aria-atomic="true"
        class="position-fixed top-0 m-2 d-flex justify-content-center align-items-center w-100"
        style="z-index: 9000;">
    <div {{ stimulus_target('toast', 'container') }} class="top-0 start-0">
        {% for label, messages in app.flashes %}
            <div class="vstack gap-2">
                {% for message in messages %}
                    <div
                            class="toast toast-responsive align-items-center border-0 shadow-lg text-bg-dark"
                            role="alert"
                            aria-live="assertive"
                            aria-atomic="true"
                            data-bs-delay="5000"
                    >
                        <div class="d-flex">
                            <div class="toast-body lead">
                                {{ message }}
                            </div>
                            <a type="button"
                               class="me-2 m-auto text-white"
                               aria-label="Close"
                               data-bs-dismiss="toast">
                                {{ ux_icon('mdi:close', { style: 'height: 2em;' }) }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</div>
