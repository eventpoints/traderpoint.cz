{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            background: url('{{ asset('images/grinder.jpg') }}') center / cover no-repeat fixed;
            /* If you don’t want it fixed-on-scroll, drop the “fixed” keyword */
            min-height: 100vh;
            min-height: 100dvh;
        }
    </style>

    <div class="container">
        <div class="row justify-content-center my-5">
            <div class="col-md-4">
                {{ form_start(registrationForm) }}

                <div class="card">
                    <div class="card-header">
                        <div class="fs-4 fw-bold">{{ 'register'|trans|title }}</div>
                        <div class="text-end">
                            <a href="{{ path('trader_register') }}" class="link-dark">{{ 'register-as-trader'|trans }}</a>
                        </div>
                    </div>
                    <div class="card-body vstack gap-3 text-center">
                        {{ form_row(registrationForm.firstName) }}
                        {{ form_row(registrationForm.lastName) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword) }}
                        <div>
                            <a href="#" type="button"
                               class="link-dark">{{ 'forgot_password'|trans }}</a>
                        </div>
                    </div>
                    <div class="card-body text-center text-muted">
                        {{ 'by-continuing-accept-terms'|trans(domain='terms') }} <a href="{{ path('terms_of_use') }}">{{ 'terms-of-use'|trans(domain='terms') }}</a>
                    </div>
                    <div class="card-footer d-flex justify-content-end align-items-center gap-4 border-top">
                        <a href="{{ path('app_login') }}" type="button"
                           class="link-dark">{{ 'login'|trans }}</a>
                        <button type="submit" class="btn btn-primary btn-lg">{{ 'register'|trans }}</button>
                    </div>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
