{% extends 'base.html.twig' %}

{% block title %}Trader Dashboard{% endblock %}

{% block body %}

    <div class="container">
        {% if app.user.traderProfile.isTraderAccountConfigured %}
            <div class="row justify-content-center g-3 my-5">
                <div class="col-12 col-md-6">
                    <div class="vstack gap-3">
                        <div class="nav nav-pills nav-justified w-100 bg-light rounded-pill overflow-hidden">
                            <a class="nav-link rounded-pill {{ app.request.query.get('tab') == 'discover' ? "active shadow" }}"
                               href="{{ path('trader_dashboard', {tab: 'discover'}) }}">
                                {{ 'discover'|trans|capitalize }}
                            </a>
                            <a class="nav-link rounded-pill {{ app.request.query.get('tab') == 'pending' ? "active shadow" }}"
                               href="{{ path('trader_dashboard', {tab: 'pending'}) }}">
                                {{ 'pending'|trans|capitalize }}
                            </a>
                            <a class="nav-link rounded-pill {{ app.request.query.get('tab') == 'historical' ? "active shadow" }}"
                               href="{{ path('trader_dashboard', {tab: 'historical'}) }}">
                                {{ 'histroy'|trans|capitalize }}
                            </a>
                        </div>

                        {% if app.request.query.get('tab') == 'discover' %}

                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fs-4 fw-bold">{{ 'jobs-for-you'|trans|title }}</div>
                                </div>
                                <div>
                                    <a href="{{ path('user_account', {tab: 'trader'}) }}"
                                       class="btn btn-light rounded-pill"
                                       type="button">
                                        <i class="bi bi-gear-fill fs-5"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-start flex-wrap gap-2">
                                {% for skill in app.user.traderProfile.skills %}
                                    <twig:Badge text="{{ skill.name|trans(domain='skills') }}" variant="primary"
                                                :isOutline="true" size="lg"/>
                                {% endfor %}
                                <twig:Badge
                                        text="{{ 'km.radius'|trans({distance: app.user.traderProfile.serviceRadius}) }}"
                                        variant="dark" :isOutline="true" size="lg"/>
                            </div>
                        {% endif %}
                    </div>

                    <div class="row g-4 my-3">
                        {% for job in pagination.items %}
                        <div class="col-12">
                            <div class="card position-relative">
                                <div class="card-header">
                                    <div class="d-flex justify-content-between align-items-start gap-2">
                                        <div class="d-flex justify-content-start align-items-start gap-2">
                                            <a href="{{ path('client_profile', {id: job.owner.id}) }}">
                                                <img class="rounded-circle avatar-50" src="{{ job.owner.avatar }}">
                                            </a>
                                            <div>
                                                <div class="fw-bold text-dark fs-4 lh-1">{{ job.title }}</div>
                                                <div class="">
                                                    <a href="{{ path('client_profile', {id: job.owner.id}) }}">
                                                        {{ job.owner.fullName|title }}
                                                    </a>
                                                    <div class="small text-muted">{{ job.createdAt.diffForHumans }}</div>
                                                </div>
                                            </div>
                                        </div>
                                        <twig:Badge text="{{ 'quotes-received'|trans({count: job.quotes.count}) }}"
                                                    variant="dark" :isOutline="true" size="lg"/>
                                    </div>
                                </div>
                                <div class="card-header">
                                    <div class="d-flex fs-4 flex-wrap gap-2">
                                        <twig:Badge
                                                text="{{ (job.budget / 100)|format_currency(job.currencyCodeEnum.value, {}, app.locale) }}"
                                                variant="dark" :isOutline="true" size="lg"/>

                                        {% for skill in job.skills %}
                                            <twig:Badge text="{{ skill.name|trans(domain='skills')|title }}"
                                                        variant="primary" :isOutline="true" size="lg"/>
                                        {% endfor %}
                                        <twig:Badge
                                                text="{{ 'km.distance'|trans({distance: distance_km(job.latitude, job.longitude, app.user.traderProfile.latitude,app.user.traderProfile.longitude)}) }}"
                                                variant="dark" :isOutline="true" size="lg"/>
                                        <twig:Badge text="{{ job.timelinePreferenceEnum.value|trans }}" variant="dark"
                                                    :isOutline="true" size="lg"/>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div data-controller="read-more"
                                         data-read-more-more-text-value="{{ 'read-more'|trans }}"
                                         data-read-more-less-text-value="{{ 'read-less'|trans }}">
                                        <div class="read-more-content" data-read-more-target="content">
                                            {{ job.description|nl2br }}
                                        </div>
                                        {% if job.description|length > 200 %}
                                            <div class="text-center text-muted my-3">
                                                <a data-action="read-more#toggle">{{ 'read-more'|trans }}</a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            {{ component('engagement_reactions', { engagement: job }) }}
                                        </div>
                                        <a class="btn btn-light text-primary rounded-pill"
                                           href="{{ path('trader_show_engagement', {id: job.id}) }}">
                                            <i class="bi bi-arrow-right-short fs-3"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% else %}
                        <!-- Content displayed if engagements is empty -->
                        <div class="col-12">
                            <div class="text-center text-muted">
                                <p class="fw-bold mb-1 fs-4">{{ 'nothing-to-see-here'|trans }}</p>
                                <p class="mb-0">{{ 'could-not-find-any-jobs'|trans }}</p>
                                <hr/>
                                <div class="text-muted">{{ 'could-not-find-any-jobs-extra'|trans }}</div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                    {{ knp_pagination_render(pagination) }}

                </div>
            </div>
        {% else %}
            <div class="row justify-content-center g-3 my-5">
                <div class="col-12 col-md-6">
                    <div class="card">
                        <div class="card-body text-center">
                            <div class="fs-4">{{ 'get-started'|trans|title }}</div>
                            <div class="mb-3">{{ 'set-your-service-radius'|trans }}</div>
                            <a href="{{ path('user_account', {tab: 'trader'}) }}"
                               class="btn btn-outline-primary rounded-pill my-3">{{ 'update-now'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}


