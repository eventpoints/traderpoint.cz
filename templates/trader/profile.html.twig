{% extends 'simple.base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="row justify-content-center vh-100 g-0">
        <div class="col-12 col-md-4 text-bg-primary d-flex flex-column justify-content-center">
            <div class="d-flex flex-column justify-content-center align-items-center mt-5">
                <twig:Badge text="{{ 'trader'|trans|title }}" variant="dark" size="lg"/>
                <img src="{{ user.avatar }}" class="img-fluid rounded-circle mt-1" style="height: 200px;" alt="">
            </div>
            <div class="list-group list-group-flush">
                <div class="list-group-item text-center bg-transparent border-primary d-flex justify-content-center align-items-center">
                    <div class="fs-2 text-white fw-bold">{{ user.fullName }}</div>
                </div>
                <div class="list-group-item fs-4 bg-transparent border-primary">
                    {% for skill in user.traderProfile.skills %}
                        <twig:Badge text="{{ skill.name|trans(domain='skills')|capitalize }}" variant="light"
                                    outline="true" size="lg"/>
                    {% endfor %}
                    <twig:Badge text="{{ 'job-count'|trans({count: user.engagements.count|compact_notation}) }}"
                                variant="light" outline="true" size="lg"/>
                </div>
                <div class="list-group-item fs-4 bg-transparent border-primary">
                    {% for language in user.getAllLangauges %}
                        <twig:Badge text="{{ language|language_name }}"
                                    variant="{{ language == user.preferredLanguage ? 'dark' : 'light' }}" outline="true"
                                    size="lg"/>
                    {% endfor %}
                </div>
                <div class="list-group-item bg-transparent fs-4 d-flex justify-content-between align-items-center">
                    <twig:RatingStars
                            :rating="user.traderProfile.averageRating ?? 0"
                            size="lg"
                            :showValue="true"
                            :reviewCount="user.traderProfile.reviews.count"
                    />
                </div>
            </div>
        </div>
        <div class="col-12 col-md-8 d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-10">
                        {% for review in user.traderProfile.reviews %}
                            {% set parts = [] %}
                            {% if review.overallRating is not null %}
                                {% set rating = review.overallRating %}
                            {% else %}
                                {% if review.responseRating is not null %}{% set parts = parts|merge([review.responseRating]) %}{% endif %}
                                {% if review.customerServicesRating is not null %}{% set parts = parts|merge([review.customerServicesRating]) %}{% endif %}
                                {% if review.workQualityRating is not null %}{% set parts = parts|merge([review.workQualityRating]) %}{% endif %}
                                {% if review.valueForMoneyRating is not null %}{% set parts = parts|merge([review.valueForMoneyRating]) %}{% endif %}
                                {% set total = 0 %}
                                {% for p in parts %}{% set total = total + p %}{% endfor %}
                                {% set rating = parts ? (total / (parts|length)) : 0 %}
                            {% endif %}

                            <div class="card mb-3 shadow-sm">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <twig:RatingStars
                                            :rating="rating"
                                            :showValue="true"
                                    />
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title mb-2">{{ review.title }}</h5>
                                    <p class="card-text mb-0">{{ review.content }}</p>
                                </div>
                                <div class="card-footer d-flex justify-content-between align-items-center small text-muted">
                                    <div>
                                        {% if review.owner %}
                                            {{ 'by'|trans({name: review.owner.fullName ?? review.owner.email}) }}
                                        {% endif %}
                                    </div>
                                    <div>
                                        {{ review.createdAt|format_date(pattern='LLLL y', locale=app.locale) }}
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-center my-3">
                                <div></div>
                                <div class="text-muted">{{ 'no-reviews-yet'|trans }}</div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


