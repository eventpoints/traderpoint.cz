{% extends 'base.html.twig' %}

{% block title %}{{ 'add-your-phone'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center g-3 my-5">

            <div class="col-12 col-md-6">
                <div class="card my-3">
                    {{ form_start(phoneForm) }}
                    <div class="card-header">
                        <div class="fs-4 fw-bold">{{ 'add-your-phone'|trans({})|title }}</div>
                        <div class="text-muted small">{{ 'add-your-phone-explainer'|trans({}) }}</div>
                    </div>
                    <div class="card-body">
                        {{ form_row(phoneForm) }}
                    </div>
                    <div class="mt-3 d-grid">
                        <button data-turbo="false"  class="btn btn-primary">
                            {{ 'send-code'|trans({}) }}
                        </button>
                    </div>
                    {{ form_end(phoneForm) }}
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
